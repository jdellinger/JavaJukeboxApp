<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android" 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    >
			<TextView  
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
			    android:text="@string/coming_up"
			    android:textSize="16px"
			    android:textStyle="bold"
			    />
    <ListView android:id="@android:id/list" android:layout_height="wrap_content" android:layout_width="match_parent"></ListView>
    <LinearLayout android:id="@android:id/empty" android:layout_height="wrap_content" android:layout_width="fill_parent">
    	<TextView android:text="- No tracks -" 
    		android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:id="@+id/row_title"
			android:layout_gravity="center"
			android:textStyle="italic"
			></TextView>
    </LinearLayout>
</LinearLayout>
		